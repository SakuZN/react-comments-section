{
  "name": "@charlesmack34/react-comments-section",
  "version": "1.1.1",
  "description": "React component library for a functioning comments section",
  "author": "Charles Mack",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/charlesmack34/react-comments-section.git"
  },
  "main": "dist/index.js",
  "style": "dist/styles.css",
  "module": "dist/index.modern.js",
  "source": "src/index.tsx",
  "sideEffects": false,
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "build": "microbundle-crl-with-assets --css-modules false --no-compress --format modern,cjs",
    "start": "microbundle-crl-with-assets --css-modules false watch --no-compress --format modern,cjs",
    "prepare": "run-s build",
    "test": "run-s test:unit test:lint test:build",
    "test:build": "run-s build",
    "test:lint": "eslint .",
    "test:unit": "cross-env CI=1 react-scripts test --env=jsdom",
    "test:watch": "react-scripts test --env=jsdom",
    "predeploy": "cd example && npm install && npm run build",
    "deploy": "gh-pages -d example/build"
  },
  "peerDependencies": {
    "react": "^18.2.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.5.0",
    "@testing-library/user-event": "^7.2.1",
    "@types/draftjs-to-html": "^0.8.1",
    "@types/html-to-draftjs": "^1.4.0",
    "@types/jest": "^25.2.3",
    "@types/node": "^12.20.55",
    "@types/react": "^16.14.43",
    "@types/react-dom": "^16.9.19",
    "@types/react-draft-wysiwyg": "^1.13.4",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "babel-eslint": "^10.0.3",
    "cross-env": "^7.0.3",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-config-standard-react": "^9.2.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.1",
    "eslint-plugin-promise": "^4.3.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-standard": "^4.1.0",
    "gh-pages": "^2.2.0",
    "microbundle-crl": "^0.13.11",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.8",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "^2.1.3",
    "typescript": "^3.9.10"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "@emotion/react": "^11.11.1",
    "@szhsin/react-menu": "^3.5.3",
    "@types/lodash": "^4.14.195",
    "@types/uuid": "^8.3.4",
    "draft-js": "^0.11.7",
    "draftjs-to-html": "^0.9.1",
    "emoji-picker-react": "^3.6.5",
    "html-to-draftjs": "^1.5.0",
    "microbundle-crl-with-assets": "^0.13.12",
    "react-draft-wysiwyg": "^1.15.0",
    "react-responsive-modal": "^6.4.2",
    "sass": "^1.63.6"
  },
  "types": "./dist/index.d.ts",
  "bugs": {
    "url": "https://github.com/charlesmack34/react-comments-section/issues"
  },
  "homepage": "https://github.com/charlesmack34/react-comments-section#readme",
  "directories": {
    "example": "example"
  }
}
